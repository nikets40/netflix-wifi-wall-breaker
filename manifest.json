{
  "manifest_version": 3,
  "name": "Netflix WiFi Wall Breaker",
  "version": "1.0.0",
  "description": "Bypass Netflix's WiFi wall and enjoy your favorite shows on any network!",
  "permissions": ["declarativeNetRequest", "scripting", "storage"],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://web.prod.cloud.netflix.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
